#**********************
# Positioning lookups
#

#### TODO: handle marks in various orders??? 

lookup AttachMarks {
	lookupflag 0;
		pos base @U mark @_U ;
		pos base @L mark @_L ;
	
} AttachMarks ;

lookup AttachMarks2 {
	lookupflag 0;
		pos mark @U_MarkBase mark @_U ;
		pos mark @L_MarkBase mark @_L ;
} AttachMarks2 ;


