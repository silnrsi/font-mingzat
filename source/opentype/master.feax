		lookup VtlMarkLig ;  # do before reordering
    
    ####lookup ReorderInsert ;
    ####lookup ReorderIns_RsvMark ;
} ccmp ;


feature clig {  # Contextual Ligatures
		lookup RaYaLigatures ;
		
		####lookup ReorderDelete ;
